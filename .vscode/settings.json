// .vscode/settings.json
//
// VS Code project settings for this repository.
// These apply only when this folder is open in VS Code.
// They do not affect any other projects or global VS Code setup.
// You can override them locally (user settings take priority).

{
  // Keep files clean and consistent
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.eol": "\n",

  // Use Ruff as the single formatter (if installed)
  "editor.defaultFormatter": "charliermarsh.ruff",
  "editor.formatOnSave": true
}
